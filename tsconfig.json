{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "BdApi.React.createElement",
        "jsxFragmentFactory": "BdApi.React.Fragment",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "baseUrl": ".",
        "paths": {
            "utils": [
                "./utils"
            ]
        }
    },
    "include": [
        "./*/src/*",
        "./utils/*",
        "./utils/*/*",
        "./templates/*"
    ],
}